{
  "name": "samarkand-guide",
  "version": "1.0.1",
  "description": "Samarkand: relocating guide",
  "private": true,
  "repository": "megahertz/samarkand-guide",
  "author": "Alexey Prokhorov",
  "license": "MIT",
  "homepage": "https://samarkand-guide.com",
  "scripts": {
    "build": "docusaurus build",
    "lint": "npm run lint:types && npm run lint:styles && npm run lint:md -- --check",
    "lint:md": "prettier --check docs README.md",
    "lint:styles": "eslint src '*.js'",
    "lint:types": "tsc",
    "postversion": "git push --follow-tags",
    "serve": "docusaurus serve -h 0.0.0.0",
    "start": "docusaurus start -h 0.0.0.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.14"
  },
  "spech": {
    "documents": [
      "docs/**/*.md*",
      "src/pages/**/*.md*"
    ],
    "languages": [
      "ru"
    ],
    "providers": [
      {
        "name": "hunspell"
      }
    ]
  },
  "dependencies": {
    "@docusaurus/core": "2.2.0",
    "@docusaurus/preset-classic": "2.2.0",
    "@easyops-cn/docusaurus-search-local": "^0.33.6",
    "@mdx-js/react": "^1.6.22",
    "@pbe/react-yandex-maps": "^1.2.2",
    "clsx": "^1.2.1",
    "docusaurus-plugin-image-zoom": "^0.1.1",
    "prism-react-renderer": "^1.3.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@docusaurus/module-type-aliases": "2.2.0",
    "@tsconfig/docusaurus": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "eslint": "^8.30.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-unicorn": "^45.0.2",
    "prettier": "^2.8.1",
    "spech": "^0.2.1",
    "typescript": "^4.7.4"
  }
}
